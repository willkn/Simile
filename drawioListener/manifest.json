// manifest.json
{
  "manifest_version": 3,
  "name": "Button Press Extension",
  "version": "1.0",
  "description": "An extension that listens for a button press on a webpage",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
